{
  "name": "axon",
  "version": "0.1.0",
  "description": "Decentralized neuron management",
  "scripts": {
    "dev": "cd src/axon-ui && npm run dev",
    "build": "cd src/axon-ui && npm run build",
    "start": "cd src/axon-ui && npm run start",
    "predev": "npm run copy:types",
    "prebuild": "npm run copy:types",
    "prestart": "npm run copy:types",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --delete src/declarations"
  }
}
